<h2>Book it</h2>
<%= form_for(@renting, html: { multipart: true }) do |f| %>
	<div class="form-group">
		<%= f.label :client, class: 'col-md-2 control-label' %>
		<div class="col-md-10">
			<%= f.text_field :client %>
		</div>
	</div>

	<div class="form-group">	
		<%= f.label :from, class: 'col-md-2 control-label' %>
		<div class="col-md-10">
			<%= f.date_select :start_date %>
		</div>
	</div>

	<div class="form-group">	
		<%= f.label :to, class: 'col-md-2 control-label' %>
		<div class="col-md-10">
			<%= f.date_select :finish_date %>
		</div>
	</div>

	<%= f.hidden_field :car_id, value: @car.id %>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<%= f.submit class: 'btn btn-primary' %>
		</div>
	</div>
<% end %>
